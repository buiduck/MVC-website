@model List<testwebmvc.ViewModels.OrderHistoryViewModel>
@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lịch sử đơn hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID Đơn hàng</th>
            <th>Tên đơn hàng</th>
            <th>Ngày tạo</th>
            <th>Trạng thái</th>
            <th>Chi tiết đơn hàng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderName</td>
                <td>@order.CreatedOnUtc</td>
                <td>@order.Status</td>
                <td>
                    <ul>
                        @foreach (var detail in order.OrderDetails)
                        {
                            <li>
                                @detail.ProductName - Số lượng: @detail.Quantity
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

