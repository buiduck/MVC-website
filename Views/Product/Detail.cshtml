<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<style>
    /* Thiết lập kiểu cho container của thông báo */
    #notification-container {
        position: fixed;
        top: 150px;
        right: 50px;
        width: 350px;
        z-index: 1000;
    }

    /* Thiết lập kiểu cho thông báo */
    #notification-message {
        background-color: #28a745;
        color: #fff;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: none;
    }
    /* ICON + VA -*/
    .input-spinner {
        display: flex;
        align-items: center;
    }

        .input-spinner button {
            padding: 0 5px;
        }

        .input-spinner input {
            width: 50px;
            text-align: center;
        }
    /*zoom*/
    .img-big-wrap {
        overflow: hidden;
        display: inline-block;
    }

        .img-big-wrap img {
            transition: transform 0.2s ease;
            width: 100%;
            height: auto;
        }

        .img-big-wrap:hover img {
            transform: scale(1.5);
        }
</style>
<script type="text/javascript">
    $(function () {
        $("#addtocart").click(function () {
            const model = {};
            //lấy id sản phẩm
            model.id = @Model.id;
            // lấy số lượng đặt hàng
            model.Quantity = $("#ipQuantity").val();

            console.log(model);
            debugger;
            $.ajax({
                type: "POST",
                url: '@Url.Action("AddToCart", "Cart")',
                data:  JSON.stringify(model) ,
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function () {
                    showNotification("Sản phẩm đã được thêm vào giỏ hàng.", true);
                    $('#CartCount').text(@Session["count"] + 1);
                },
                error: function () {
                    showNotification("Không thể thêm sản phẩm vào giỏ hàng!", false);
                }
            });
            return false;
        });
    });
</script>
